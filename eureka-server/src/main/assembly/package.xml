<assembly>  
	<!-- mvn clean package assembly:assembly -->
    <id>release</id> 
     
    <!-- 打包成zip文件 -->  
    <formats>
        <format>zip</format>  
<!--         <format>dir</format> -->
    </formats>
  	
  	<!-- 文件复制 -->
    <fileSets>
        <fileSet>  
            <directory>/</directory>    
            <includes>  
                <include>run.bat</include>
                <include>run.sh</include>
            </includes> 
            <outputDirectory>/</outputDirectory> 
        </fileSet>
        
        <fileSet>  
            <directory>/src/main/resources</directory>  
            <includes>
                <include>*.properties</include>
                <include>*.xml</include>
            </includes>   
            <outputDirectory>/config</outputDirectory> 
        </fileSet>
        
        <fileSet>  
            <directory>/target</directory>    
            <includes>  
                <include>eureka-server.jar</include>
            </includes> 
            <outputDirectory>/</outputDirectory> 
        </fileSet>
    </fileSets>  
</assembly>